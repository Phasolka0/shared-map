{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "rootDir": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}